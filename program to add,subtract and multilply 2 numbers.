//program to add,subtract and multilply 2 numbers.


#include<stdio.h>
#include<conio.h>
int main()
{
    int a,b;
    int op;
    printf("Enter the 2 numbers a and b");
     printf("\nEnter the values of a: ");
    scanf("%d",&a);
    printf("Enter the values of b: ");
    scanf("%d",&b);
    printf("\n Chose operation:");
    printf(" \n 1.Addition\n 2.Subtraction\n 3.Multiplication\n");
    printf("Enter your Choice : ");
    scanf("%d",&op);
    switch(op)
    {
    case 1	:
        printf("Sum of %d and %d is : %d",a,b,a+b);
        break;
    case 2	:
        printf("Difference of %d and %d is : %d",a,b,a-b);
        break;
    case 3	:
        printf("Multiplication of %d and %d is : %d",a,b,a*b);
        break;
   
    default	:
        printf(" Enter Your Correct Choice.");
        break;
    }
   
    return 0;
}
